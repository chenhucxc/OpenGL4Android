<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_basic01"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:text="01-绘制图像"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/btn_case"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_case"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="02-等腰三角"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_basic01"
        app:layout_constraintEnd_toStartOf="@id/btn_gl_jni"
        app:layout_constraintStart_toEndOf="@id/btn_basic01" />

    <Button
        android:id="@+id/btn_gl_jni"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="4dp"
        android:text="03-矩形和圆"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_basic01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_case" />

    <Button
        android:id="@+id/btn_ripple"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="纹理"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/btn_pano"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="@id/btn_basic01"
        app:layout_constraintTop_toBottomOf="@id/btn_basic01" />

    <Button
        android:id="@+id/btn_pano"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="3D"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_ripple"
        app:layout_constraintEnd_toStartOf="@id/btn_gl3"
        app:layout_constraintStart_toEndOf="@id/btn_ripple" />

    <Button
        android:id="@+id/btn_gl3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="球和VR"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_ripple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_pano" />

    <Button
        android:id="@+id/btn_vr_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="VR 视频"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="12sp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="@id/btn_ripple"
        app:layout_constraintTop_toBottomOf="@id/btn_ripple" />

    <Button
        android:id="@+id/btn_video_02"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="MP4 Video"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/btn_video_03"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_vr_video"
        app:layout_constraintStart_toEndOf="@id/btn_vr_video" />

    <Button
        android:id="@+id/btn_video_03"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="VR Video2"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_vr_video"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_video_02" />
</androidx.constraintlayout.widget.ConstraintLayout>